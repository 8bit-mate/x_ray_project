<table class="table table-borderless table-sm table-track-preview">
  <tbody>
    <% tracks.each do |track| %>
      <tr>
        <th scope="row"><%= track.number %></th>
        <td>
          <%= render "shared/list_artists", artists: track.artists, url_scope: nil %> - <%= track.song.title %> <%= track.song.print_variation %>
        </td>
        <td>
          <%= render "shared/track_play_button", track: track %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
