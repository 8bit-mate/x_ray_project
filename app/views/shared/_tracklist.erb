<div class="tracklist">
  <table class="table table-responsive">
    <tbody>
      <% tracks.each do |track| %>

      <tr>
        <th scope="row">
          <%= track.number %>
        </th>
        <td>
          <% track.song.artists.each do |artist| %>
            <%= link_to [url_scope, artist], style:"text-decoration:none" do %>
              <span class=<%= "tag" %> title="<%= artist.short_description %>"><%= artist.full_name %></span>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= track.song.title %> <%= track.song.print_variation %>
        </td>
        <td>
          <%= track.duration %>
        </td>
        <td>
          <% if track.web_audio.attached? %>
            <%= content_tag "button",
              "",
              id: track.web_audio_key,
              class: "play-button",
              data: {
                "action": "click->track-selector#controlPlayback",
                "track-selector-target": "button",
                "track-key": track.web_audio_key,
                "title": track.song.title
              } %>
          <% end %>
        </td>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>