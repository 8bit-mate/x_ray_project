<div class="tracklist">
  <table class="table table-responsive">
    <tbody>
      <% tracks.each do |track| %>

      <tr>
        <th scope="row">
          <%= track.number %>
        </th>
        <td>
          <% track.song.artists.each do |artist| %>
            <%= link_to [url_scope, artist], style:"text-decoration:none" do %>
              <span class=<%= "tag" %> title="<%= artist.short_description %>"><%= artist.full_name %></span>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= track.song.song_title.title %>
        </td>
        <td>
          <%= track.duration %>
        </td>
        <td>
          <% if track.web_audio.attached? %>
            <audio controls>
              <source src="<%= rails_blob_url(track.web_audio) %>" type="audio/mpeg">
              Your browser does not support the audio element.
            </audio>
          <% end %>
        </td>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>