<p style="color: green"><%= notice %></p>

<h1>Artists</h1>

<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= sort_link(@q, :last_name, "Last name") %></th>
      <th scope="col"><%= sort_link(@q, :first_name, "First name") %></th>
      <th scope="col"><%= sort_link(@q, :songs_count, "Songs in the database") %></th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each_with_index do |artist, index| %>
      <tr>
        <th scope="row">
          <%= index + 1 %>
        </th>
        <td>
          <%= artist.last_name %>
        </td>
        <td>
          <%= artist.first_name %>
        </td>
        <td>
          <%= artist.songs.length %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

