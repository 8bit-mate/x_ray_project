<p style="color: green"><%= notice %></p>

<h1>Format tags</h1>

<div class="page-intro">
  <p><%= t(:format_tags_index_intro) %></p>
</div>

<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= sort_link(@q, :name, "Name") %></th>
      <th scope="col">Description</th>
      <th scope="col"><%= sort_link(@q, :records_count, "Number of records tagged") %></th>
    </tr>
  </thead>
  <tbody>
    <% @format_tags.each_with_index do |t, index| %>
      <tr>
        <th scope="row">
          <%= item_index(index, @pagy) %>
        </th>
        <td>
          <%= link_to t.name, t %>
        </td>
        <td>
          <%= t.description %>
        </td>
        <td>
          <%= t.records_count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

