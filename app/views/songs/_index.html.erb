<h1>Songs</h1>

<div class="page-intro">
  <p><%= t(:songs_index_intro) %></p>
</div>

<%= search_form_for @q do |f| %>
  <%= f.search_field :title_cont, placeholder: "Search by title..." %>
  <%= f.submit "Search", class: "btn btn-primary btn-sm", data: { turbo_stream: true } %>
  <%= link_to "Clear Search", request.path, class:"btn btn-secondary btn-sm" %>
<% end %>

<%= render "shared/songs_table", songs: songs %>
