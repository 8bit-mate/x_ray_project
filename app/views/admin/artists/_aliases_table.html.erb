<div>
  <h3>Aliases</h3>
  <table class="table table-responsive table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Stage name en</th>
        <th scope="col">Stage name ru</th>
      </tr>
    </thead>
    <tbody>
      <% artist.aliases.each_with_index do |artist, index| %>
        <tr>
          <th scope="row">
            <%= index + 1 %>
          </th>
          <td>
            <%= link_to artist.stage_name_en, [:admin, artist] %>
          </td>
          <td>
            <%= link_to artist.stage_name_ru, [:admin, artist] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>