<p style="color: green"><%= notice %></p>

<h1>Format tags</h1>

<%= link_to "<<", admin_index_path %> |
<%= link_to "New format tag", new_admin_format_tag_path, class: "btn btn-primary btn-sm" %>

<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= sort_link(@q, :id, "ID") %></th>
      <th scope="col"><%= sort_link(@q, :name_en, "Name en") %></th>
      <th scope="col"><%= sort_link(@q, :name_ru, "Name ru") %></th>
      <th scope="col"><%= sort_link(@q, :records_count, "Records count") %></th>
      <th scope="col"><%= sort_link(@q, :created_at, "Created at") %></th>
      <th scope="col"><%= sort_link(@q, :updated_at, "Updated at") %></th>
      <th scope="col">Controls</th>
    </tr>
  </thead>
  <tbody>
    <% @format_tags.each_with_index do |t, index| %>
      <tr>
        <th scope="row">
          <%= item_index(index, @pagy) %>
        </th>
        <td>
          <%= t.id %>
        </td>
        <td>
          <%= t.name_en %>
        </td>
        <td>
          <%= t.name_ru %>
        </td>
        <td>
          <%= t.records_count %>
        </td>
        <td>
          <%= t.created_at %>
        </td>
        <td>
          <%= t.updated_at %>
        </td>
        <td>
          <%= link_to "Show", admin_format_tag_path(t) %> |
          <%= link_to "Edit", edit_admin_format_tag_path(t) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>
<%== pagy_info(@pagy) %>

<div id="format_tags">
</div>
