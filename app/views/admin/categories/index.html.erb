<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<%= link_to "<<", admin_index_path %> |
<%= link_to "New category", new_admin_category_path %>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", admin_category_path(category) %> |
      <%= link_to "Edit this category", edit_admin_category_path(category) %>
    </p>
    <hr />
  <% end %>
</div>
