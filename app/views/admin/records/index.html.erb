<p style="color: green"><%= notice %></p>

<h1>Records</h1>

<%= link_to "<<", admin_index_path %> |
<%= link_to "New record", new_admin_record_path, class: "btn btn-primary btn-sm" %>

<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Preview</th>
      <th scope="col"><%= sort_link(@q, :id, "ID", data: {turbo_stream: true}) %></th>
      <th scope="col"><%= sort_link(@q, :category_name, "Category", data: {turbo_stream: true}) %></th>
      <th scope="col"><%= sort_link(@q, :number, "Number", data: {turbo_stream: true}) %></th>
      <th scope="col">Tracklist</th>
      <th scope="col">Controls</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each_with_index do |record, index| %>
      <tr>
        <th scope="row">
          <%= item_index(index, @pagy) %>
        </th>
        <td>
          <%= link_to image_tag(record.web_images.first.variant(:preview), class: "admin-table-img-preview"), record %>
        </td>
        <td>
          <%= record.id %>
        </td>
        <td>
          <%= record.category.name %>
        </td>
        <td>
          <%= record.number %>
        </td>
        <td>
          <%= render "shared/tracklist_preview", tracks: record.tracks.order(:number), url_scope: nil %>
        </td>
        <td>
          <%= link_to "Show", admin_record_path(record) %> |
          <%= link_to "Edit", edit_admin_record_path(record) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>
<%== pagy_info(@pagy) %>


<div id="records">
</div>
