<%= form_with(model: [:admin, song]) do |form| %>
  <% if song.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :year_released, style: "display: block" %>
    <%= form.number_field :year_released %>
  </div>

  <div>
    <p><strong>Select artists:</strong></p>
    <% Artist.all.order(:name_en).each do |tag| %>
      <%= check_box_tag "tags[artists_ids][]", tag.id, @song.artists.map{ |e| e.id}.include?(tag.id), id: dom_id(tag) %>
      <%= label_tag dom_id(tag), tag.name %><br>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
