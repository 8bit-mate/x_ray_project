<%= form_with(model: [:admin, song]) do |form| %>
  <% if song.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :year_of_release, style: "display: block" %>
    <%= form.number_field :year_of_release %>
  </div>

  <%= tag.div class: "artist-selection", data: { controller: "artist-selector" } do %>
    <p><strong>Add artists:</strong></p>
    <datalist id="artists-list">
      <% Artist.order(:slug).each do |artist| %>
        <option value="<%= artist.slug %>"></option>
      <% end %>
    </datalist>

    <datalist id="roles-list">
      <% Role.order(:name_en).each do |role| %>
        <option value="<%= role.name_en %>"></option>
      <% end %>
    </datalist>

    <% song.artists.each_with_index do |artist, idx| %>
      <%= text_field_tag "tags[artists_slugs][]", artist.slug, class: "artist-input", id: idx, list: "artists-list" %>
      <% role = song.artist_songs[idx].role %>
      <% name = role ? role.name_en : "" %>
      <%= text_field_tag "tags[roles_names][]", name, class: "roles-input", id: idx, list: "roles-list" %>
    <% end %>
  <% end %>

  <div>
    <p><strong>Select song title:</strong></p>
    <% SongGroup.all.each do |tag| %>
      <% checked = @song.song_group ? @song.song_group.id == tag.id : false %>
      <%= radio_button_tag "tags[song_group_id]", tag.id, checked, id: dom_id(tag) %>
      <%= label_tag dom_id(tag), tag.title %><br>
    <% end %>
  </div>


  <h3>Artists and Roles</h3>
  <% 2.times do |i| %> 
    <%= form.fields_for :artist_songs, @song.artist_songs.build do |artist_song_fields| %>
      <h3>Artist <%= i + 1 %></h3> 

      <%= artist_song_fields.label :artist_id, "Artist" %>
      <%= artist_song_fields.collection_select :artist_id, Artist.all, :id, :first_name %>

      <%= artist_song_fields.label :role_id, "Role" %>
      <%= artist_song_fields.collection_select :role_id, Role.all, :id, :name %>
    <% end %>
  <% end %>

  <div>
    <%= form.label :variation_en, style: "display: block" %>
    <p>E.g.: live, alt. take, etc.</p>
    <%= form.text_field :variation_en %>
  </div>

  <div>
    <%= form.label :variation_ru, style: "display: block" %>
    <%= form.text_field :variation_ru %>
  </div>

  <div>
    <%= form.label :notes_en, style: "display: block" %>
    <%= form.text_area :notes_en %>
  </div>

  <div>
    <%= form.label :notes_ru, style: "display: block" %>
    <%= form.text_area :notes_ru %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
